@model TaskBase.Components.Views.Shared.Components.Avatar.AvatarModel

<div onclick="uploadAvatar()" class="nav-item border overflow-hidden" style="width: 50px; height: 50px; border-radius: 100%;">
    <img style="width:100%; height:100%;" src="@Model.Value" alt="Avatar" />
    <form id="upload_avatar_form" action="/Storage/UploadImage" enctype="multipart/form-data" method="post" asp-antiforgery="true">
        <input id="upload_avatar" onchange="callMethod()" style="display:none" type="file" name="file" value="" />
    </form>
</div>