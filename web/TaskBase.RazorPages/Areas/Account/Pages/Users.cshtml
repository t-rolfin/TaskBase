@page "{handler?}"
@model UsersModel

@{
    ViewData["Title"] = "Users";
    Layout = "_DashboardLayout";
}

<div class="container-flex row justify-content-center text-white">
    @foreach (var member in Model.Users)
    {
        <div class="card m-3 w-25 bg-transparent p-0" style="max-width:350px; min-width:300px">
            <div class="card-body row justify-content-around align-items-center">
                <div class="border p-0 overflow-hidden" style="border-radius:100%; width:50px; height:50px;">
                    <img style="width:100%; height:100%;" src="@(string.IsNullOrWhiteSpace(member.AvatarUrl) ? " /Avatars/avatar.jpg" : member.AvatarUrl)" alt="Avatar" />
                </div>
                <h5 class="w-auto">@member.UserName</h5>
            </div>

            <vc:user-roles model="member" />

        </div>
    }
</div>